{
  "_comment": "Production environment overrides - JSON format",
  "debug": false,
  "server": {
    "port": 443,
    "workers": 16,
    "max_connections": 10000,
    "upload_dir": "/var/lib/myapp/uploads"
  },
  "database": {
    "url": "postgresql://prod_user:secure_pass@db.internal:5432/myapp_prod",
    "max_connections": 50,
    "backup_dir": "/var/lib/myapp/backups"
  },
  "paths": {
    "data_dir": "/var/lib/myapp/data",
    "cache_dir": "/var/cache/myapp", 
    "temp_dir": "/tmp/myapp",
    "log_dir": "/var/log/myapp",
    "allowed_upload_dirs": [
      "/var/lib/myapp/uploads/users",
      "/var/lib/myapp/uploads/public"
    ],
    "trusted_data_sources": [
      "/var/lib/myapp/trusted/external_api",
      "/var/lib/myapp/trusted/partner_feeds"
    ]
  },
  "security": {
    "cert_dir": "/etc/ssl/myapp",
    "key_file": "/etc/ssl/private/myapp.key",
    "allowed_origins": ["https://myapp.com", "https://api.myapp.com"],
    "session_timeout": 3600,
    "sandbox_root": "/var/lib/myapp/sandbox",
    "restricted_paths": [
      "/etc/shadow",
      "/root",
      "/var/lib/mysql"
    ]
  },
  "logging": {
    "level": "warn",
    "format": "json", 
    "file_path": "production.log",
    "error_log": "error.log",
    "access_log": "access.log",
    "max_size_mb": 500,
    "max_files": 20
  }
}
